# AWS Cognito Configuration
AWS_REGION=us-east-2
USER_POOL_ID=your-user-pool-id
USER_POOL_CLIENT_ID=your-user-pool-client-id

# AWS Credentials (required for Bedrock)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# AWS Bedrock Configuration
BEDROCK_MODEL=anthropic.claude-3-sonnet-20240229-v1:0

# DynamoDB Configuration
DYNAMODB_CHAT_SESSIONS_TABLE=airdiscovery-chat-sessions

# Amadeus API Configuration
# Obtenha suas credenciais em: https://developers.amadeus.com/
AMADEUS_CLIENT_ID=your_amadeus_client_id
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret
# Use 'test' para ambiente de teste ou 'production' para produção
AMADEUS_ENVIRONMENT=test

# Redis Configuration
# Para desenvolvimento local:
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Para produção com ElastiCache (obtido via CDK outputs):
# REDIS_HOST=clustername.cache.amazonaws.com
# REDIS_PORT=6379
# REDIS_PASSWORD=auth-token-if-enabled

# Ou usar URL completa para ElastiCache/Redis Cloud:
# REDIS_URL=redis://username:password@host:port
# REDIS_URL=rediss://cluster.cache.amazonaws.com:6380  # SSL enabled

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=airdiscovery

# Application Configuration
NODE_ENV=development
PORT=3000

# Stripe Configuration
# Obtenha suas credenciais em: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# URLs Configuration
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:3001

# Logging Configuration
# Log level: debug | info | warn | error | fatal
LOG_LEVEL=info
# Pretty print logs in development (true/false)
LOG_PRETTY=false
# Redact PII in production (true/false)
LOG_REDACT_PII=true

# Sentry Configuration
# Get your DSN from: https://sentry.io/settings/projects/
SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
# Environment: development | staging | production
SENTRY_ENVIRONMENT=development
# Percentage of transactions to sample (0.0 to 1.0)
SENTRY_TRACES_SAMPLE_RATE=0.1
# Buffer size for batching logs (default: 50)
SENTRY_BUFFER_SIZE=50
# Flush interval in milliseconds (default: 30000)
SENTRY_FLUSH_INTERVAL=30000

# OpenTelemetry Configuration
OTEL_SERVICE_NAME=airdiscovery-backend
OTEL_SERVICE_VERSION=0.0.1
# Exporter type: sentry | jaeger | zipkin | otlp
OTEL_EXPORTER_TYPE=sentry
